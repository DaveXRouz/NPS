    "jspdf": "^4.1.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-i18next": "^14.0.0",
    "react-router-dom": "^6.22.0",
    "recharts": "^3.7.0",
    "tailwindcss-rtl": "^0.9.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.0",
    "@testing-library/jest-dom": "^6.9.1",
