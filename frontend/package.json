    "jsdom": "^28.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.0",
    "vite": "^5.1.0",
    "vitest": "^1.3.0"
